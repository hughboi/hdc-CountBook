<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/counterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/incrementButton"
        android:text="Counter"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lastModifiedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/incrementButton"
        android:layout_below="@+id/counterName"
        android:text="LMD: mm/dd/yyyy"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/currentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/incrementButton"
        android:layout_below="@+id/lastModifiedDate"
        android:text="Current Value: 0"
        android:textSize="16sp" />

    <Button
        android:id="@+id/incrementButton"
        android:focusable="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/lastModifiedDate"
        android:layout_alignBottom="@+id/lastModifiedDate"
        android:layout_toStartOf="@+id/decrementButton" />

    <Button
        android:id="@+id/decrementButton"
        android:focusable="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/incrementButton" />

</RelativeLayout>
